pipeline {
    agent any

    stages {
        stage ('Build') {
            steps {
                sh 'chmod +x gradlew'
                sh './gradlew clean build'
            }
        }
        stage ('Test') {
            steps{
                sh './gradlew check'
            }
        }
    }
    post {
        always {
          junit(testResults: 'target/surefire-reports/*.xml', allowEmptyResults : true)
        }
    }

}

